<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>
   <div class="field">
             <%= f.hidden_field :image %>
         <%= f.label :image %><br />
             <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
               </div>
  <div class="field">
    <%= f.label :country_id %><br />
    <%= f.select :country_id, Country.all.collect {|h|[h.name, h.id]} %>
  </div>

  <div class="field">
    <%= f.label :city_id %><br />
    <%= f.select :city_id, City.all.collect {|h|[h.name, h.id]} %>
  </div>
    <div>
          <%= f.label :galon_id, style: "display: block" %>
              <%= f.select :galon_id, options_for_select(Galon.all.collect{|x|[x.name, x.id, :'data-class' => 'avatar', :'data-style' => "background-image: url('/assets/#{x.image}');background-size:100% 100%;"]}), {}, {id: "CarId2"} %>
                </div>

  <div class="field">
    <%= f.label :job_ids %><br />
    <%= f.collection_check_boxes(:job_ids,Job.all,:id, :name) do |b|  %>
      <div>
        <%=b.label do%>
          <%=b.check_box%>

          <%=b.text%>
        <%end%>
      </div>
    <%end%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
